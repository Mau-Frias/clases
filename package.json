{
    "name": "clases-monorepo",
    "private": true,
    "author": "Mauricio Fr√≠as <mauricio.fr.or@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "pnpm -r run build",
        "test": "vitest run",
        "dev": "pnpm -r run dev",
        "release": "pnpm build && pnpm -r --filter \"./packages/**\" publish",
        "bump:patch": "pnpm -r --filter \"./packages/**\" version patch",
        "bump:minor": "pnpm -r --filter \"./packages/**\" version minor",
        "bump:major": "pnpm -r --filter \"./packages/**\" version major"
    },
    "devDependencies": {
        "tsup": "^8.5.1",
        "typescript": "^5.3.3",
        "vitest": "^1.2.1"
    },
    "version": "0.0.1"
}
