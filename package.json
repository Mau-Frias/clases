{
    "name": "clases-monorepo",
    "private": true,
    "author": "Mauricio Fr√≠as <mauricio.fr.or@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "pnpm -r run build",
        "test": "vitest run",
        "dev": "pnpm -r run dev",
        "bump:core": "pnpm --filter clases version patch --no-git-tag-version",
        "pub:core": "pnpm --filter clases build && pnpm --filter clases publish",
        "bump:tw": "pnpm --filter clases-tailwind version patch --no-git-tag-version",
        "pub:tw": "pnpm --filter clases-tailwind build && pnpm --filter clases-tailwind publish"
    },
    "devDependencies": {
        "tsup": "^8.5.1",
        "typescript": "^5.3.3",
        "vitest": "^1.2.1"
    },
    "version": "0.0.1"
}
